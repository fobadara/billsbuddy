<section class="container w-50 m-auto">
  <div>
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "required" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "required" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "w-100" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <strong class="my-5">All fields marked with <span class="required"></span> are required</strong>

      <div class="actions w-100 d-flex align-center">
        <%= f.submit "Log in", class: "btns w-50 w-md-75 m-md-auto" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</section>